{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@mutant/mutant-core": [
        "libs/mutant-core/src"
      ],
      "@mutant/mutant-core/*": [
        "libs/mutant-core/src/*"
      ]
    }
  }
}
